<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textViewCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="16dp" />

    <Spinner
        android:id="@+id/spinnerCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/textViewCategory"/>

    <TextView
        android:id="@+id/textViewOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order by"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="360dp"
        app:layout_constraintTop_toBottomOf="@+id/spinnerCategory"/>

    <Spinner
        android:id="@+id/spinnerOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/textViewOrder"/>

    <TextView
        android:id="@+id/textViewYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Year Range"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="347dp"
        app:layout_constraintTop_toBottomOf="@+id/spinnerOrder"/>

    <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
        android:id="@+id/rangeSeekbarYear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:min_value="1929"
        app:max_value="2027"
        app:corner_radius="10"
        app:bar_color="#EE88F7"
        app:bar_highlight_color="#D810EA"
        app:left_thumb_color="#8D0D99"
        app:right_thumb_color="#8D0D99"
        app:left_thumb_color_pressed="#56005E"
        app:right_thumb_color_pressed="#56005E"
        app:data_type="_integer"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/textViewYear"/>

    <TextView
        android:id="@+id/textViewMinYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 1929"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="398dp"
        app:layout_constraintTop_toBottomOf="@+id/rangeSeekbarYear"/>

    <TextView
        android:id="@+id/textViewMaxYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2027 "
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="398dp"
        app:layout_constraintTop_toBottomOf="@+id/rangeSeekbarYear"/>

    <TextView
        android:id="@+id/textViewVote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vote Range"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="398dp"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/textViewMinYear"/>

    <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
        android:id="@+id/rangeSeekbarVote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:min_value="0"
        app:max_value="10"
        app:corner_radius="10"
        app:bar_color="#EE88F7"
        app:bar_highlight_color="#D810EA"
        app:left_thumb_color="#8D0D99"
        app:right_thumb_color="#8D0D99"
        app:left_thumb_color_pressed="#56005E"
        app:right_thumb_color_pressed="#56005E"
        app:data_type="_integer"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/textViewVote"/>

    <TextView
        android:id="@+id/textViewMinVote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="398dp"
        app:layout_constraintTop_toBottomOf="@+id/rangeSeekbarVote"/>

    <TextView
        android:id="@+id/textViewMaxVote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10 "
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="398dp"
        app:layout_constraintTop_toBottomOf="@+id/rangeSeekbarVote"/>


</androidx.constraintlayout.widget.ConstraintLayout>